# Environment Configuration Template
# Copy this file to .env and update with your actual values
# IMPORTANT: Never commit .env file to version control!

# Application URLs
APP_URL=https://www.saucedemo.com
APP_URL_STAGING=https://staging.saucedemo.com
APP_URL_PRODUCTION=https://www.saucedemo.com

# Test User Credentials
TEST_USER_STANDARD=standard_user
TEST_USER_PASSWORD=secret_sauce
TEST_USER_LOCKED=locked_out_user
TEST_USER_PROBLEM=problem_user
TEST_USER_PERFORMANCE=performance_glitch_user

# Browser Configuration
BROWSER=chrome
HEADLESS=false
BROWSER_MAXIMIZE=true

# Timeouts (in seconds)
IMPLICIT_WAIT=10
EXPLICIT_WAIT=30
PAGE_LOAD_TIMEOUT=60

# Test Environment
ENVIRONMENT=test
TEST_ENV=local

# Remote Execution (Selenium Grid / BrowserStack / Sauce Labs)
REMOTE_EXECUTION=false
GRID_URL=http://localhost:4444
BROWSERSTACK_USERNAME=
BROWSERSTACK_ACCESS_KEY=
BROWSERSTACK_BUILD_NAME=SauceDemo Tests
SAUCE_LABS_USERNAME=
SAUCE_LABS_ACCESS_KEY=

# Database Configuration (if needed)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=testdb
DB_USERNAME=testuser
DB_PASSWORD=testpass
DB_URL=jdbc:mysql://localhost:3306/testdb

# API Configuration (if needed)
API_BASE_URL=https://api.example.com
API_KEY=
API_SECRET=
API_TIMEOUT=30

# Reporting
REPORT_PATH=test-output/reports/
SCREENSHOT_PATH=test-output/screenshots/
REPORT_TITLE=SauceDemo E2E Test Report
REPORT_NAME=E-Commerce Automation Test Results

# Email Configuration (for sending reports)
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_RECIPIENTS=test@example.com

# Slack Integration (for notifications)
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#test-automation

# Parallel Execution
PARALLEL_EXECUTION=false
THREAD_COUNT=2

# Screenshot Settings
CAPTURE_SCREENSHOT_ON_FAILURE=true
CAPTURE_SCREENSHOT_ON_SUCCESS=false

# Logging
LOG_LEVEL=INFO
ENABLE_VIDEO_RECORDING=false

# Cloud Services
AWS_ACCESS_KEY=
AWS_SECRET_KEY=
AWS_S3_BUCKET=
